@model IEnumerable<MediCare_MVC_Project.Models.BedViewModel>

@{
    ViewData["Title"] = "All Beds";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" />

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .page-header h2 {
            font-weight: 600;
            font-size: 30px;
        }

    .btn-add {
        background-color: #198754;
        text-decoration: none;
        color: #fff;
        padding: 10px 20px;
        border-radius: 6px;
        font-weight: 500;
        font-size: 14px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: background-color 0.3s ease, transform 0.2s ease;
        border: none;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        cursor: pointer;
    }

        .btn-add:hover {
            background-color: #157347;
            transform: scale(1.05);
        }

        .btn-add i {
            margin-right: 8px;
            font-size: 16px;
        }

    .card-container {
        background: #fff;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .table-custom {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
    }

        .table-custom th,
        .table-custom td {
            padding: 14px;
            text-align: left;
            border-bottom: 1px solid #dee2e6;
            font-size: 14px;
        }

        .table-custom th {
            background-color: #0d6efd;
            color: #fff;
            font-weight: 600;
        }

        .table-custom tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .table-custom tbody tr:hover {
            background-color: #eef1f5;
        }

    .action-btns {
        display: flex;
        gap: 15px;
    }

        .action-btns .btn {
            padding: 0;
            font-size: 15px;
            border: none;
            background: transparent;
            color: #000;
        }

    .no-beds {
        text-align: center;
        padding: 20px;
        font-size: 14px;
        color: #6c757d;
    }
</style>

<div class="card-container">
    <div class="page-header mb-3">
        <h2>All Beds</h2>
        <a asp-action="AddBed" asp-controller="Bed" class="btn-add">
            <i class="fas fa-plus-circle"></i> Add New Bed
        </a>
    </div>

    <table class="table-custom">
        <thead>
            <tr>
                <th>#</th>
                <th>Bed No</th>
                <th>Room No</th>
                <th>Room Type</th>
                <th>Is Occupied</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                int index = 1;
            }
            @if (Model != null && Model.Any())
            {
                foreach (var bed in Model)
                {
                    <tr>
                        <td>@index</td>
                        <td>@bed.BedNo</td>
                        <td>@bed.RoomNo</td>
                        <td>@bed.RoomType</td>
                        <td>@(bed.IsOccupied ? "Yes" : "No")</td>
                        <td class="action-btns">
                            <a asp-action="EditBed" asp-controller="Bed" asp-route-id="@bed.BedId" title="Edit" class="btn text-warning">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="EmptyBed" asp-controller="Bed" asp-route-id="@bed.BedId" title="Delete" class="btn text-danger" onclick="return confirm('Are you sure to delete this bed?');">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="no-beds">No beds found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}