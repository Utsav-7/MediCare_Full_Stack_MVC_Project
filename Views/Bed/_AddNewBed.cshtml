@model MediCare_MVC_Project.MediCare.Application.DTOs.AdmissionDTOs.BedDTO

@{
    ViewData["Title"] = "Add New Bed";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    form {
        max-width: 600px;
        background-color: #fff;
        padding: 30px;
        margin: 40px auto;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        margin-bottom: 25px;
        font-weight: bold;
        color: #333;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 5px;
        display: block;
    }

    .form-control,
    .form-select {
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        font-size: 15px;
        width: 100%;
    }

    .text-danger {
        font-size: 13px;
        color: #dc3545;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 16px;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0069d9;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>

<h2>Add New Bed</h2>

<form asp-action="AddBed" asp-controller="Bed" method="post" class="mt-4">
    <div class="form-group">
        <label asp-for="BedNo" class="form-label">Bed Number</label>
        <input asp-for="BedNo" class="form-control" />
        <span asp-validation-for="BedNo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoomNo" class="form-label">Room Number</label>
        <input asp-for="RoomNo" class="form-control" />
        <span asp-validation-for="RoomNo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoomType" class="form-label">Room Type</label>
        <select asp-for="RoomType" class="form-select">
            <option value="">-- Select Room Type --</option>
        </select>
        <span asp-validation-for="RoomType" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="fas fa-save"></i> Save
    </button>
    <a asp-action="AllBeds" asp-controller="Bed" class="btn btn-secondary ms-2">Cancel</a>
</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {
            $.ajax({
                url: '/Bed/GetRoomListDropDown',
                method: 'GET',
                success: function (data) {
                    const roomTypeDropdown = $('select[name="RoomType"]');
                    roomTypeDropdown.empty();
                    roomTypeDropdown.append('<option value="">-- Select Room Type --</option>');

                    $(data).each(function (index, room) {
                        roomTypeDropdown.append(`<option value="${room.roomType}">${room.roomType}</option>`);
                    });
                },
                error: function () {
                    alert("Failed to load room types.");
                }
            });
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
