@model MediCare_MVC_Project.MediCare.Application.DTOs.AdmissionDTOs.BedDTO

@{
    ViewData["Title"] = "Add New Bed";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .bed-form-card {
        max-width: 750px;
        margin: 40px auto;
        background-color: #fff;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .bed-form-card:hover {
            transform: scale(1.01);
        }

    .form-title {
        text-align: center;
        font-size: 28px;
        font-weight: 700;
        color: #333;
        margin-bottom: 30px;
    }

    .form-label {
        font-weight: 600;
        color: #444;
    }

    .form-control,
    .form-select {
        border-radius: 8px;
        font-size: 15px;
        border: 1px solid #ccc;
        padding: 10px;
        transition: border-color 0.3s;
    }

        .form-control:focus,
        .form-select:focus {
            border-color: #007bff;
            box-shadow: none;
        }

    .text-danger {
        font-size: 13px;
        margin-top: 3px;
        display: block;
    }

    .form-btns {
        text-align: end;
        margin-top: 30px;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 500;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0069d9;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>

<div class="container-fluid">
    <div class="bed-form-card">
        <div class="form-title">Add New Bed</div>

        <form asp-action="AddBed" asp-controller="Bed" method="post">
            <div class="row g-4">
                <div class="col-md-6">
                    <label asp-for="BedNo" class="form-label">Bed Number</label>
                    <input asp-for="BedNo" class="form-control" />
                    <span asp-validation-for="BedNo" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="RoomNo" class="form-label">Room Number</label>
                    <input asp-for="RoomNo" class="form-control" />
                    <span asp-validation-for="RoomNo" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="RoomType" class="form-label">Room Type</label>
                    <select asp-for="RoomType" class="form-select">
                        <option value="">-- Select Room Type --</option>
                    </select>
                    <span asp-validation-for="RoomType" class="text-danger"></span>
                </div>
            </div>

            <div class="form-btns">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Save
                </button>
                <a asp-action="AllBeds" asp-controller="Bed" class="btn btn-secondary ms-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {
            $.ajax({
                url: '/Bed/GetRoomListDropDown',
                method: 'GET',
                success: function (data) {
                    const roomTypeDropdown = $('select[name="RoomType"]');
                    roomTypeDropdown.empty();
                    roomTypeDropdown.append('<option value="">-- Select Room Type --</option>');

                    $(data).each(function (index, room) {
                        roomTypeDropdown.append(`<option value="${room.roomType}">${room.roomType}</option>`);
                    });
                },
                error: function () {
                    alert("Failed to load room types.");
                }
            });
        });
    </script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
}
