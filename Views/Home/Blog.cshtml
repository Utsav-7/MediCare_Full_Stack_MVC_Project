@{
	ViewData["Title"] = "Blogs";
}
<style>
    .highlight {
        background: linear-gradient(to right,#0084d4, #00a4f4, #2cbeff, #75d4ff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-fill-color: transparent;
        font-size: 30px;
        font-weight: bold;
    }

    h2 {
        font-size: 30px;
        margin: 30px 0px;
    }

    /* Blog Section */
    .blog-section {
        max-width: 1200px;
        margin: auto;
        padding: 40px 20px;
    }

    /* Featured Blog */
    .featured-blog {
        display: flex;
        align-items: center;
        gap: 20px;
        background: #f8f8f8;
        padding: 30px;
        border-radius: 10px;
        margin-bottom: 40px;
    }

    .featured-image img {
        width: 30%;
        height: 50%;
        border-radius: 10px;
    }

    .featured-content {
        width: 50%;
        align-items: center;
        margin-bottom: 30px;
    }

        .featured-content h2 {
            font-size: 26px;
            color: #333;
        }

        .featured-content p {
            font-size: 16px;
            color: #555;
        }

        .featured-content a {
            text-decoration: none;
            color: #00a4f4;
            font-weight: bold;
        }

    /* Trending Blog Grid */
    .trending-blogs h2,
    .recent-articles h2 {
        text-align: center;
        margin-bottom: 20px;
    }

    .blog-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
    }

    .blog-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s ease;
    }

        .blog-card:hover {
            transform: translateY(-5px);
        }

        .blog-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

    .blog-content {
        padding: 15px;
    }

        .blog-content h3 {
            font-size: 18px;
            color: #333;
        }

        .blog-content p {
            font-size: 14px;
            color: #666;
        }

        .blog-content a {
            text-decoration: none;
            color: #00a4f4;
            font-weight: bold;
        }

    /* Recent Articles List */
    .article-list {
        max-width: 800px;
        margin: auto;
        list-style: none;
        padding: 0;
    }

        .article-list li {
            padding: 15px;
            border-bottom: 1px solid #ddd;
        }

            .article-list li h4 {
                font-size: 18px;
                margin-bottom: 5px;
            }

            .article-list li a {
                text-decoration: none;
                color: #00a4f4;
            }

            .article-list li p {
                font-size: 14px;
                color: #666;
                margin-bottom: 5px;
            }

            .article-list li span {
                font-size: 12px;
                color: #999;
            }

</style>

