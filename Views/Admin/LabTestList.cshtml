@model IEnumerable<MediCare_MVC_Project.Models.LabTestViewModel>

@{
    ViewData["Title"] = "Lab Tests";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" />

<style>
    /* Container for the entire page */
    .card-container {
        background: #fff;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .page-header h2 {
        font-weight: 600;
        font-size: 24px;
    }

    /* Header and search form styling */
    .page-header {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

        .page-header .left-section {
            flex: 1;
        }

        .page-header .right-section {
            display: flex;
            align-items: center;
        }

    .search-form {
        display: flex;
        align-items: center;
        margin-right: 15px;
    }

        .search-form input {
            width: 200px; /* Fixed input size */
            height: 30px;
            padding: 5px;
        }

        .search-form button {
            border-radius: 0 20px 20px 0;
            height: 45px;
        }

    .btn-add {
        background-color: #198754;
        color: #fff;
        padding: 10px 20px;
        border-radius: 6px;
        font-weight: 500;
        width: auto;
    }

        .btn-add:hover {
            background-color: #157347;
        }

    .table-custom {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
    }

        .table-custom th,
        .table-custom td {
            padding: 14px;
            text-align: left;
            border-bottom: 1px solid #dee2e6;
            font-size: 14px;
        }

        .table-custom th {
            background-color: #0d6efd;
            color: #fff;
            font-weight: 600;
        }

        .table-custom tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .table-custom tbody tr:hover {
            background-color: #eef1f5;
        }

    /* Actions buttons */

    .action-btns{
        display: flex;
        gap: 15px;
    }

    .action-btns .btn {
        padding: 0;
        font-size: 15px;
        width: auto;
        height: auto;
        border: none;
        background: transparent;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

        .action-btns .btn i {
            margin: 0;
        }

        .action-btns .btn:hover {
            opacity: 0.8;
        }

    /* Styling for edit and delete icons */
    .action-btns .btn-danger {
        color: black;
    }

    .action-btns .btn-warning {
        color: black;
    }

    /* Editable input */
    .editable-input {
        width: 100%;
        padding: 5px;
        font-size: 14px;
    }

    .badge-status {
        padding: 6px 10px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 500;
    }

    .badge-success {
        background-color: #d1e7dd;
        color: #0f5132;
    }

    .badge-danger {
        background-color: #f8d7da;
        color: #842029;
    }
</style>

<div class="card-container">
    <div class="page-header">
        <div class="left-section">
            <h2 class="mb-0">Lab Tests</h2>
        </div>
        <div class="right-section d-flex align-items-center">
            <form asp-action="AddLabTest" asp-controller="Admin" method="post" class="search-form">
                <input type="text" name="TestName" class="form-control" placeholder="Test Name" required />
                <input type="text" name="Description" class="form-control" placeholder="Description" required />
                <input type="number" step="0.01" name="Cost" class="form-control" placeholder="Cost" required />
                <button type="submit" class="btn-add">
                    <i class="fas fa-plus"></i> Add Test
                </button>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table-custom">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Test Name</th>
                    <th>Description</th>
                    <th>Cost</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int index = 1;
                    foreach (var test in Model)
                    {
                        <tr id="row-@test.TestId">
                            <td>@index</td>
                            <td>
                                <span id="name-text-@test.TestId">@test.TestName</span>
                                <form id="edit-form-name-@test.TestId" asp-action="UpdateLabTest" asp-controller="LabTest" method="post" style="display:none;">
                                    <input type="hidden" name="TestId" value="@test.TestId" />
                                    <input type="text" name="TestName" class="editable-input" value="@test.TestName" required />
                                </form>
                            </td>
                            <td>
                                <span id="desc-text-@test.TestId">@test.Description</span>
                                <form id="edit-form-desc-@test.TestId" asp-action="UpdateLabTest" asp-controller="LabTest" method="post" style="display:none;">
                                    <input type="hidden" name="TestId" value="@test.TestId" />
                                    <input type="text" name="Description" class="editable-input" value="@test.Description" required />
                                </form>
                            </td>
                            <td>
                                <span id="cost-text-@test.TestId">@test.Cost</span>
                                <form id="edit-form-cost-@test.TestId" asp-action="UpdateLabTest" asp-controller="LabTest" method="post" style="display:none;">
                                    <input type="hidden" name="TestId" value="@test.TestId" />
                                    <input type="number" name="Cost" step="0.01" class="editable-input" value="@test.Cost" required />
                                </form>
                            </td>
                            <td>
                                <div class="action-btns">
                                    <button type="button" class="btn btn-sm btn-warning" title="Edit" onclick="enableEdit(@test.TestId)">
                                        <i class="fas fa-edit"></i>
                                    </button>

                                    <form asp-action="DeleteLabTest" asp-controller="Admin" method="post" onsubmit="return confirm('Are you sure?');">
                                        <input type="hidden" name="TestId" value="@test.TestId" />
                                        <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>

                                    <div id="edit-actions-@test.TestId" style="display:none;">
                                        <button type="submit" class="btn btn-sm btn-success" form="edit-form-name-@test.TestId">Save</button>
                                        <button type="button" class="btn btn-sm btn-secondary" onclick="cancelEdit(@test.TestId)">Cancel</button>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        index++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5">No lab tests found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    function enableEdit(id) {
        ['name', 'desc', 'cost'].forEach(field => {
            document.getElementById(`${field}-text-${id}`).style.display = 'none';
            document.getElementById(`edit-form-${field}-${id}`).style.display = 'inline';
        });
        document.getElementById(`edit-actions-${id}`).style.display = 'inline';
    }

    function cancelEdit(id) {
        ['name', 'desc', 'cost'].forEach(field => {
            document.getElementById(`${field}-text-${id}`).style.display = 'inline';
            document.getElementById(`edit-form-${field}-${id}`).style.display = 'none';
        });
        document.getElementById(`edit-actions-${id}`).style.display = 'none';
    }
</script>
