@model IEnumerable<MediCare_MVC_Project.Models.UserViewModel>

@{
    ViewData["Title"] = "All Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
    }

    .table th, .table td {
    font-size: 12px;
    padding: 12px 15px;
    text-align: left;
    border-bottom: 1px solid #ddd;
    }

    .table th {
    background-color: #343a40; /* Dark background for header */
    color: white;
    }

    .table tbody tr:nth-child(even) {
    background-color: #f2f2f2;
    }

    .table tbody tr:hover {
    background-color: #e0e0e0;
    }

    .btn {
    padding: 8px 15px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    }

    .btn-primary {
    background-color: #007bff;
    color: white;
    }

    .btn-success {
    background-color: #28a745;
    color: white;
    }

    .btn-info {
    background-color: #17a2b8;
    color: white;
    }

    .btn-warning {
    background-color: #ffc107!important;
    color: #212529!important; /* Dark text for better contrast */
    }

    .btn-danger {
    background-color: #dc3545;
    color: white;
    }

    .btn-sm {
    padding: 5px 10px;
    font-size: 0.875rem;
    }

    .badge {
    padding: 5px 10px;
    border-radius: 4px;
    font-size: 0.875rem;
    color: black;
    }

    .badge-success {
    background-color: #28a745!important;
    }

    .badge-danger {
    background-color: #dc3545!important;
    }

    /* Modal Styles */
    .modal-content {
    border-radius: 8px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
    }

    .modal-header {
    background-color: #f8f9fa;
    border-bottom: 1px solid #dee2e6;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    }

    .modal-title {
    font-size: 1.25rem;
    font-weight: 500;
    }

    .modal-body {
    padding: 20px;
    }

    .modal-footer {
    border-top: 1px solid #dee2e6;
    padding: 15px;
    display: flex;
    justify-content: flex-end;
    }

    /* Flexbox for Header Buttons */
    .d-flex.justify-content-between.align-items-center {
    display: flex;
    justify-content: space-between;
    align-items: center;
    }

    /* Margin Bottom for Header */
    .mb-3 {
    margin-bottom: 1rem;
    }

    .btn {
    padding: 6px 12px;
    font-size: 0.875rem;
    }

    .badge {
    padding: 4px 8px;
    font-size: 0.80rem;
    }

    .modal-dialog {
    margin: 10px;
    }

    .user-button{
    margin-right: 50px;
    }

</style>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>All Users</h2>
    <div class="user-button">
        <a class="btn btn-primary" href="@Url.Action("CreateAdminUser", "Admin")" id="addUserButton">Add User</a>
    </div>
</div>

<div id="userFormContent" style="display: none;">
</div>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Mobile No</th>
            <th>Emergency No</th>
            <th>Date of Birth</th>
            <th>Role</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
        }
        @foreach (var user in Model)
        {
            <tr>
                <td>@index</td>
                <td>@user.FirstName @user.LastName</td>
                <td>@user.Email</td>
                <td>@user.MobileNo</td>
                <td>@user.EmergencyNo</td>
                <td>@user.DateOfBirth.ToShortDateString()</td>
                <td>@user.Role</td>
                <td>
                    @if (@user.Status)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-warning" href="@Url.Action("Edit", "User", new { id = user.Id })">Edit</a>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "User", new { id = user.Id })">Delete</a>
                </td>
            </tr>
            index++;
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#addUserButton').click(function (e) {
                e.preventDefault(); // Prevent default anchor behavior

                var url = $(this).attr('href');

                $('#userFormContent').load(url, function () {
                    $('#userFormContent').show();
                });
            });
        });

        // Other script functions (openUserForm, openDeleteModal) are removed.
    </script>
}