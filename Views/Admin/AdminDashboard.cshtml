@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .cards {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
        gap: 20px;
        grid-auto-rows: auto;
    }

    .card {
        background: white;
        padding: 20px;
        border-radius: 8px;
        text-align: center;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
    }

        .card h3 {
            margin-bottom: 10px;
            color: #34495e;
            font-size: 20px;
        }

        .card p {
            font-size: 30px;
            font-weight: 700;
            color: #016d9d;
        }

    .topbar {
        background: white;
        padding: 15px 20px;
        margin-bottom: 20px;
        border-radius: 8px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    }
</style>

<body>
    <div class="topbar">
        <h1>Welcome Admin</h1>
    </div>

    <div class="cards">
        <div class="card">
            <p>24</p>
            <h3>Total Doctors</h3>
        </div>
        <div class="card">
            <p>150</p>
            <h3>Total Patients</h3>
        </div>
        <div class="card">
            <p>12</p>
            <h3>Appointments Today</h3>
        </div>
        <div class="card">
            <p>₹1,20,000</p>
            <h3>Total Revenue</h3>
        </div>
    </div>
</body>
</html>