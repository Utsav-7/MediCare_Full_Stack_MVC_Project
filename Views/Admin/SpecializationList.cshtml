@model IEnumerable<MediCare_MVC_Project.MediCare.Application.DTOs.SpecializationDTOs.GetSpecializationDTO>

@{
    ViewData["Title"] = "All Specializations";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    .table th, .table td {
        font-size: 12px;
        padding: 12px 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    .table th {
        background-color: #343a40;
        color: white;
    }

    .table tbody tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .table tbody tr:hover {
        background-color: #e0e0e0;
    }

    .btn {
        padding: 6px 12px;
        font-size: 0.875rem;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
    }

    .btn-sm {
        padding: 5px 10px;
        font-size: 0.875rem;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
    }

    .btn-warning {
        background-color: #ffc107 !important;
        color: #212529 !important;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

    .editable-input {
        width: 100%;
        padding: 5px;
        font-size: 14px;
    }

    .form-inline {
        display: flex;
        gap: 10px;
    }

    .specialization-button {
        margin-right: 50px;
    }

    .action-buttons {
        display: flex;
        gap: 5px;
        flex-wrap: wrap;
        align-items: center;
    }


    .d-flex.justify-content-between.align-items-center {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>All Specializations</h2>
    <div class="specialization-button">
        <form asp-action="AddSpecialization" asp-controller="Admin" method="post" class="form-inline">
            <input type="text" name="SpecializationName" class="form-control" placeholder="Enter Specialization Name" required />
            <button type="submit" class="btn btn-success">Add</button>
        </form>
    </div>
</div>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Specialization Name</th>
            <th>Total Doctors</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var item in Model)
            {
                <tr id="row-@item.SpecializationId">
                    <td>@index</td>

                    <td>
                        <span id="name-text-@item.SpecializationId">@item.SpecializationName</span>

                        <form id="edit-form-@item.SpecializationId" asp-action="Update" asp-controller="Specialization" method="post" style="display:none;">
                            <input type="hidden" name="id" value="@item.SpecializationId" />
                            <input type="text" name="specializationName" class="editable-input" value="@item.SpecializationName" required />
                        </form>
                    </td>

                    <td>@item.TotalDoctors</td>

                    <td>
                        <div class="action-buttons">
                            <div id="btn-group-@item.SpecializationId">
                                <button type="button" class="btn btn-sm btn-warning" onclick="enableEdit(@item.SpecializationId)">Edit</button>
                            </div>

                            <div id="edit-actions-@item.SpecializationId" style="display:none;">
                                <button type="submit" class="btn btn-sm btn-success" form="edit-form-@item.SpecializationId">Submit</button>
                                <button type="button" class="btn btn-sm btn-secondary" onclick="cancelEdit(@item.SpecializationId)">Cancel</button>
                            </div>

                            <form asp-action="Delete" asp-controller="Specialization" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@item.SpecializationId" />
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </div>
                    </td>

                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="4">No specializations found.</td>
            </tr>
        }
    </tbody>
</table>

<script>
    function enableEdit(id) {
        document.getElementById('name-text-' + id).style.display = 'none';
        document.getElementById('edit-form-' + id).style.display = 'inline';
        document.getElementById('btn-group-' + id).style.display = 'none';
        document.getElementById('edit-actions-' + id).style.display = 'inline';
    }

    function cancelEdit(id) {
        document.getElementById('name-text-' + id).style.display = 'inline';
        document.getElementById('edit-form-' + id).style.display = 'none';
        document.getElementById('btn-group-' + id).style.display = 'inline';
        document.getElementById('edit-actions-' + id).style.display = 'none';
    }
</script>