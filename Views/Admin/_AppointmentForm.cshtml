@model MediCare_MVC_Project.MediCare.Application.DTOs.AppointmentDTOs.AppointmentDTO

@{
    ViewData["Title"] = "Book Appointment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    form {
        max-width: 800px;
        background: white;
        padding: 30px;
        margin: 20px auto;
        border-radius: 10px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        margin-bottom: 20px;
    }

    .col-md-6 {
        flex: 0 0 50%;
        padding: 0 10px;
        box-sizing: border-box;
    }

    .form-label {
        font-weight: 600;
        color: #333;
    }

    .form-control, .form-select {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 16px;
    }

    .text-danger {
        color: #dc3545;
        font-size: 14px;
    }

    .text-end {
        text-align: right;
        margin-top: 20px;
    }

    .btn {
        padding: 12px 20px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
    }

    .btn:hover {
        transform: translateY(-2px);
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    .btn-success:hover {
        background-color: #218838;
    }
</style>

<form asp-action="BookAppointment" method="post" asp-controller="Admin">
    <input type="hidden" asp-for="PatientId" value="@Model.PatientId" />

    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">Doctor</label>
            <select asp-for="DoctorId" class="form-select" id="doctorDropdown">
                <option value="">-- Select Doctor --</option>
            </select>
            <span asp-validation-for="DoctorId" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Appointment Date</label>
            <input asp-for="AppointmentDate" type="date" class="form-control" />
            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Start Time</label>
            <input asp-for="AppointmentStarts" type="time" class="form-control" />
            <span asp-validation-for="AppointmentStarts" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">End Time</label>
            <input asp-for="AppointmentEnds" type="time" class="form-control" />
            <span asp-validation-for="AppointmentEnds" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Status</label>
            <select asp-for="Status" class="form-select" id="statusDropdown">
                <option value="">-- Select Status --</option>
                <option value="Scheduled">Scheduled</option>
                <option value="CheckedIn">CheckedIn</option>
                <option value="InProgress">InProgress</option>
                <option value="Completed">Completed</option>
                <option value="Cancelled">Cancelled</option>
                <option value="NoShow">NoShow</option>
                <option value="Rescheduled">Rescheduled</option>
                <option value="PendingApproval">PendingApproval</option>
                <option value="Rejected">Rejected</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <div class="col-md-12 mb-3">
            <label class="form-label">Description</label>
            <textarea asp-for="AppointmentDescription" class="form-control" rows="3"></textarea>
            <span asp-validation-for="AppointmentDescription" class="text-danger"></span>
        </div>
    </div>

    <div class="text-end">
        <a asp-action="PatientList" asp-controller="Admin" class="btn btn-secondary me-2">Back</a>
        <button type="submit" class="btn btn-success">Book</button>
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $.ajax({
                url: '/Admin/GetDoctorsDropdown',
                method: 'GET',
                success: function (data) {
                    const dropdown = $('#doctorDropdown');
                    dropdown.empty();
                    dropdown.append('<option value="">-- Select Doctor --</option>');
                    data.forEach(function (item) {
                        dropdown.append(`<option value="${item.doctorId}">${item.doctorName} - ${item.specialization}</option>`);
                    });
                },
                error: function (err) {
                    console.error('Error loading doctors:', err);
                }
            });
        });

    </script>
}