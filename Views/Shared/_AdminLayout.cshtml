<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/admin-dashboard.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="navbar">
        <div class="logo">
            <img src="~/images/logo.jpg" alt="MediCare Logo" style="height: 50px; margin-right: 10px;" />
        </div>
        <div class="nav-controls">
            <button id="toggleSidebar" class="toggle-btn"><i class="fas fa-bars"></i></button>
            <div class="user-info">
                <span class="username">
                    <i class="fas fa-user-circle" style="margin-right: 6px;"></i> @User.Identity.Name
                </span>
                <a href="/Auth/Logout" class="logout-btn"><i class="fas fa-sign-out-alt"></i></a>
            </div>
        </div>
    </div>

    <div class="dashboard-container">
        <div class="sidebar" id="sidebar">
            <ul>
                <li><a href="@Url.Action("AdminDashboard", "Admin")"><i class="fas fa-home"></i> <span>Dashboard</span></a></li> 
                <li><a href="@Url.Action("UserList", "Admin")"><i class="fas fa-user"></i> <span>Users</span></a></li>
                <li><a href="@Url.Action("DoctorList", "Admin")"><i class="fas fa-user-md"></i> <span>Doctors</span></a></li>
                <li><a href="@Url.Action("ReceptionistList", "Admin")"><i class="fas fa-user-plus"></i> <span>Receptionist</span></a></li>
                <li><a href="@Url.Action("PatientList", "Admin")"><i class="fas fa-procedures"></i> <span>Patients</span></a></li>
                <li><a href="@Url.Action("AppointmentList", "Admin")"><i class="fas fa-calendar-check"></i> <span>Appointments</span></a></li>
                <li><a href="/Billing"><i class="fas fa-file-invoice"></i> <span>Billing</span></a></li>
                <li><a href="@Url.Action("CheckUpList", "Admin")"><i class="fas fa-stethoscope"></i> <span>Check Up</span></a></li>
                <li><a href="/BedAllotment"><i class="fas fa-procedures"></i> <span>Bed Allotment</span></a></li>
                <li><a href="/Labs"><i class="fas fa-vials"></i> <span>Labs</span></a></li>
                <li><a href="@Url.Action("SpecializationList", "Admin")"><i class="fas fa-briefcase-medical"></i> <span>Specializations</span></a></li>
                <li><a href="/Settings"><i class="fas fa-cog"></i> <span>Settings</span></a></li>
                <li><a href="/Auth/Logout"><i class="fas fa-sign-out-alt"></i> <span>Logout</span></a></li>
            </ul>
        </div>

        <div class="main-content" id="mainContent">
            @RenderBody()
        </div>
    </div>

    <!-- Add this inside <body>, near the bottom -->
    <div id="loadingSpinner" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; z-index:9999; background:rgba(255,255,255,0.7); text-align:center;">
        <div style="position: absolute; top: 50%; left: 50%;">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    </div>

     <script>
        // Show loader on any form submit
        $(document).on("submit", "form", function () {
            $("#loadingSpinner").show();
        });

        // Show loader on all AJAX requests
        $(document).ajaxStart(function () {
            $("#loadingSpinner").show();
        }).ajaxStop(function () {
            $("#loadingSpinner").hide();
        });

        // Optional: hide on window load
        $(window).on("load", function () {
            $("#loadingSpinner").hide();
        });
    </script>
    <script>
        const toggleBtn = document.getElementById("toggleSidebar");
        const sidebar = document.getElementById("sidebar");
        const mainContent = document.getElementById("mainContent");

        toggleBtn.addEventListener("click", () => {
            sidebar.classList.toggle("collapsed");
            mainContent.classList.toggle("expanded");
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>