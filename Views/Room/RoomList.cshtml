@model IEnumerable<MediCare_MVC_Project.Models.RoomViewModel>

@{
    ViewData["Title"] = "All Rooms";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" />

<style>
    .page-header{
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .page-header form{
        height: 20px;
        padding: 10px;
    }

    .page-header h2 {
        font-weight: 600;
        font-size: 30px;
    }

    .btn-add {
        background-color: #198754;
        text-decoration: none;
        color: #fff;
        padding: 10px 20px;
        border-radius: 6px;
        font-weight: 500;
        font-size: 14px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: background-color 0.3s ease, transform 0.2s ease;
        border: none;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        cursor: pointer;
    }

    .btn-add:hover {
        background-color: #157347;
        transform: scale(1.05);
    }

    .btn-add:active {
        background-color: #145a30;
        transform: scale(1);
    }

    .btn-add i {
        margin-right: 8px;
        font-size: 16px;
    }

    .card-container {
        background: #fff;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .table-custom {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
    }

    .table-custom th,
    .table-custom td {
        padding: 14px;
        text-align: left;
        border-bottom: 1px solid #dee2e6;
        font-size: 14px;
    }

    .table-custom th {
        background-color: #0d6efd;
        color: #fff;
        font-weight: 600;
    }

    .table-custom tbody tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    .table-custom tbody tr:hover {
        background-color: #eef1f5;
    }

    .action-btns {
        display: flex;
        gap: 15px;
    }

    .action-btns .btn {
        padding: 0;
        font-size: 15px;
        width: auto;
        height: auto;
        border: none;
        background: transparent;
        color: #000000;
        margin-right: 10px;
    }

    .editable-input {
        width: auto;
        padding: 5px;
        font-size: 14px;
        margin-right: 8px;
    }

    .form-inline {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
    }

    .no-rooms {
        text-align: center;
        padding: 20px;
        font-size: 14px;
        color: #6c757d;
    }
</style>


<div class="card-container">

    <div class="page-header d-flex justify-content-between align-items-center mb-3">
        <h2>All Rooms</h2>
        <form asp-action="AddRoom" asp-controller="Room" method="post" class="form-inline">
            <input type="number" name="RoomNo" class="form-control" placeholder="Room No" required />
            <input type="text" name="RoomType" class="form-control" placeholder="Room Type" required />
            <button type="submit" class="btn-add"><i class="fas fa-plus-circle"></i>Add Room</button>
        </form>
    </div>

    <table class="table-custom">
        <thead>
            <tr>
                <th>#</th>
                <th>Room No</th>
                <th>Room Type</th>
                <th>Total Beds</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int index = 1;
                foreach (var item in Model)
                {
                    <tr id="row-@item.RoomId">
                        <td>@index</td>
                        <td><span id="roomno-text-@item.RoomId">@item.RoomNo</span></td>
                        <td><span id="type-text-@item.RoomId">@item.RoomType</span></td>
                        <td><span id="beds-text-@item.RoomId">@item.TotalBeds</span></td>
                        <td class="action-btns">
                            <div id="btn-group-@item.RoomId">
                                <button type="button" class="btn" onclick="enableEdit(@item.RoomId)"><i class="fas fa-edit text-warning"></i></button>
                            </div>

                            <form id="edit-form-@item.RoomId" asp-action="Update" asp-controller="Room" method="post" style="display:none;" class="form-inline">
                                <input type="hidden" name="RoomId" value="@item.RoomId" />
                                <input type="number" name="RoomNo" class="editable-input" value="@item.RoomNo" required />
                                <input type="text" name="RoomType" class="editable-input" value="@item.RoomType" required />
                                <button type="submit" class="btn text-success"><i class="fas fa-check-circle"></i></button>
                                <button type="button" class="btn text-secondary" onclick="cancelEdit(@item.RoomId)"><i class="fas fa-times-circle"></i></button>
                            </form>

                            <form asp-action="Delete" asp-controller="Room" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@item.RoomId" />
                                <button type="submit" class="btn text-danger"><i class="fas fa-trash-alt"></i></button>
                            </form>
                        </td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr><td colspan="5" class="no-rooms">No rooms found.</td></tr>
            }
        </tbody>
    </table>
</div>

<script>
    function enableEdit(id) {
        document.getElementById('roomno-text-' + id).style.display = 'none';
        document.getElementById('type-text-' + id).style.display = 'none';
        document.getElementById('beds-text-' + id).style.display = 'none';
        document.getElementById('edit-form-' + id).style.display = 'inline-flex';
        document.getElementById('btn-group-' + id).style.display = 'none';
    }

    function cancelEdit(id) {
        document.getElementById('roomno-text-' + id).style.display = 'inline';
        document.getElementById('type-text-' + id).style.display = 'inline';
        document.getElementById('beds-text-' + id).style.display = 'inline';
        document.getElementById('edit-form-' + id).style.display = 'none';
        document.getElementById('btn-group-' + id).style.display = 'inline';
    }
</script>