@model IEnumerable<MediCare_MVC_Project.Models.UserViewModel>

@{
    ViewData["Title"] = "All Users";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>All Users</h2>
    <div class="mb-3">
        <a class="btn btn-primary" href="@Url.Action("CreateAdmin", "User")">Add Admin</a>
        <a class="btn btn-success" href="@Url.Action("CreateDoctor", "User")">Add Doctor</a>
        <a class="btn btn-info" href="@Url.Action("CreateReceptionist", "User")">Add Receptionist</a>
    </div>

</div>  

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Mobile No</th>
            <th>Emergency No</th>
            <th>Date of Birth</th>
            <th>Role</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName @user.LastName</td>
                <td>@user.Email</td>
                <td>@user.MobileNo</td>
                <td>@user.EmergencyNo</td>
                <td>@user.DateOfBirth.ToShortDateString()</td>
                <td>@user.Role</td>
                <td>
                    @if (user.Status)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-warning" href="@Url.Action("Edit", "User", new { id = user.Id })">Edit</a>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "User", new { id = user.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- ✅ Modal -->
<div class="modal fade" id="userModal" tabindex="-1" aria-labelledby="userModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="userModalLabel">User Form</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="userModalContent">
                <!-- Form content will be loaded here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openUserForm(url) {
            $('#userModalContent').load(url, function () {
                $('#userModal').modal('show');
            });
        }

        function openDeleteModal(url) {
            $('#userModalContent').load(url, function () {
                $('#userModal').modal('show');
            });
        }

    </script>
}