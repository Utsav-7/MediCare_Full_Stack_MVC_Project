@model MediCare_MVC_Project.MediCare.Application.DTOs.UserRegisterDTO

<form asp-action="@(Model.Id == 0 ? "Create" : "Edit")" method="post" asp-controller="User" id="userForm">
    @if (Model.Id != 0)
    {
        <input type="hidden" asp-for="Id" />
    }

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="MobileNo" class="form-label"></label>
            <input asp-for="MobileNo" class="form-control" />
            <span asp-validation-for="MobileNo" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="EmergencyNo" class="form-label"></label>
            <input asp-for="EmergencyNo" class="form-control" />
            <span asp-validation-for="EmergencyNo" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="DateOfBirth" class="form-label"></label>
            <input asp-for="DateOfBirth" type="date" class="form-control" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="RoleId" class="form-label"></label>
            <select asp-for="RoleId" class="form-select" id="roleSelect">
                <option value="">Select Role</option>
                <option value="1">Administrator</option>
                <option value="2">Doctor</option>
                <option value="3">Receptionist</option>
            </select>
            <span asp-validation-for="RoleId" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Active" class="form-label"></label>
            <input asp-for="Active" type="checkbox" class="form-check-input" />
            <span asp-validation-for="Active" class="text-danger"></span>
        </div>
    </div>

    <div id="doctorFields" style="display: none;">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="SpecializationId" class="form-label">Specialization</label>
                <select asp-for="SpecializationId" class="form-select">
                    <option value="">Select Specialization</option>
                    @foreach (var specialization in ViewBag.Specializations)
                    {
                        <option value="@specialization.Id">@specialization.Name</option>
                    }
                </select>
                <span asp-validation-for="SpecializationId" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Qualification" class="form-label"></label>
                <input asp-for="Qualification" class="form-control" />
                <span asp-validation-for="Qualification" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="LicenseNumber" class="form-label"></label>
                <input asp-for="LicenseNumber" class="form-control" />
                <span asp-validation-for="LicenseNumber" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div id="receptionistFields" style="display: none;">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Qualification" class="form-label"></label>
                <input asp-for="Qualification" class="form-control" />
                <span asp-validation-for="Qualification" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="text-end">
        <a asp-action="Index" asp-controller="User" class="btn btn-secondary me-2">Back</a>
        <button type="submit" class="btn btn-success">Save</button>
    </div>
</form>

<script>
    document.getElementById('roleSelect').addEventListener('change', function () {
        var roleId = this.value;
        var doctorFields = document.getElementById('doctorFields');
        var receptionistFields = document.getElementById('receptionistFields');

        doctorFields.style.display = 'none';
        receptionistFields.style.display = 'none';

        if (roleId === '2') { // Doctor
            doctorFields.style.display = 'block';
        } else if (roleId === '3') { // Receptionist
            receptionistFields.style.display = 'block';
        }
    });

    // Initial check on page load if Model has RoleId
    document.addEventListener('DOMContentLoaded', function() {
        var roleId = document.getElementById('roleSelect').value;
        if (roleId === '2') {
            document.getElementById('doctorFields').style.display = 'block';
        } else if (roleId === '3') {
            document.getElementById('receptionistFields').style.display = 'block';
        }
    });

</script>